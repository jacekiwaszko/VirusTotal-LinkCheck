{
  "manifest_version": 3,
  "name": "VirusTotal URL Reputation Checker",
  "version": "1.2",
  "description": "Right-click a URL to show its VirusTotal reputation score in a modal.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.virustotal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  }
}